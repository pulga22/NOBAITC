<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.julionxn.nobaitc.controllers.NONBPAController">
    <top>
        <VBox spacing="10.0">
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Experimental Tools Design" />
                <Separator />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.4" orientation="VERTICAL">
            <items>
                <!-- Panel superior: Configuración -->
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox spacing="15.0">
                            <children>
                                <!-- Sección de factores -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Configuración de factores por niveles de cada factor" />
                                        <HBox spacing="10.0">
                                            <children>
                                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Ingrese los niveles para cada factor:" />
                                                        <ScrollPane fitToWidth="true" maxHeight="150.0" style="-fx-border-color: #ccc;">
                                                            <content>
                                                                <VBox fx:id="factorsInputContainer" spacing="5.0">
                                                                    <padding>
                                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                                    </padding>
                                                                </VBox>
                                                            </content>
                                                        </ScrollPane>
                                                        <HBox spacing="10.0">
                                                            <children>
                                                                <Button fx:id="addFactorButton" onAction="#addFactorInput" text="+ Agregar Factor" />
                                                                <Button fx:id="removeFactorButton" onAction="#removeFactorInput" text="- Remover Factor" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                                <!-- Información del diseño -->
                                                <VBox spacing="5.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-padding: 15;">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold;" text="Información del Diseño" />
                                                        <Label fx:id="trLabel" text="Número de corridas (TR): -" />
                                                        <Label fx:id="factorsCountLabel" text="Factores: -" />
                                                        <Label fx:id="lcmLabel" text="Mínimo común múltiplo (LCM): -" />
                                                        <Label fx:id="glLabel" text="Grados de libertad (GL): -" />
                                                        <Label fx:id="sfMinLabel" text="SF min: -" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <Separator />

                                <!-- Sección de parámetros de fracción -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Parámetros de la fracción por parámetros del método NONBPA" />
                                        <GridPane hgap="15.0" vgap="10.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="150.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <Label text="Tamaño de fracción (SF):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                                <TextField fx:id="fractionSizeField" promptText="Ej: 8" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                                <Label style="-fx-font-size: 11px; -fx-text-fill: #666;" text="Debe ser ≥ SF min y &lt; TR" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                                                <Label text="Número de fracciones:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                                <TextField fx:id="numberOfFractionsField" promptText="Ej: 5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                <Label style="-fx-font-size: 11px; -fx-text-fill: #666;" text="Máximo TR fracciones" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>

                                <Separator />

                                <!-- Sección tipo de fracciones -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Tipo de Fracciones" />
                                        <VBox spacing="5.0">
                                            <children>
                                                <RadioButton fx:id="randomFractionsRadio" selected="true" text="Fracciones aleatorias" />
                                                <RadioButton fx:id="customFractionsRadio" text="Fracciones personalizadas" />
                                                <HBox spacing="10.0">
                                                    <children>
                                                        <Label text="Fracciones:" />
                                                        <TextField fx:id="customFractionsField" disable="true" promptText="Ej: 1, 3, 5 o [1 3 5]" HBox.hgrow="ALWAYS" />
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets left="20.0" />
                                                    </VBox.margin>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>

                                <Separator />

                                <!-- Botones de acción -->
                                <HBox alignment="CENTER" spacing="15.0">
                                    <children>
                                        <Button fx:id="generateButton" onAction="#generateFractions" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" text="Generar Fracciones" />
                                        <Button fx:id="clearButton" onAction="#clearResults" text="Limpiar Todo" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Panel inferior: Resultados -->
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Resultados por fracciones NONBPA" />
                        <SplitPane dividerPositions="0.7" orientation="HORIZONTAL">
                            <items>
                                <!-- Tabla de resultados -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Fracciones Generadas:" />
                                        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="fractionNumberColumn" prefWidth="80.0" text="Fracción" />
                                                <TableColumn fx:id="fractionDataColumn" prefWidth="300.0" text="Datos" />
                                                <TableColumn fx:id="gbmColumn" prefWidth="80.0" text="GBM" />
                                                <TableColumn fx:id="j2Column" prefWidth="80.0" text="J2" />
                                                <TableColumn fx:id="vifsColumn" prefWidth="150.0" text="VIF's" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>

                                <!-- Log de actividad -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Log de Actividad:" />
                                        <TextArea fx:id="logTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                                    </children>
                                </VBox>
                            </items>
                        </SplitPane>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>